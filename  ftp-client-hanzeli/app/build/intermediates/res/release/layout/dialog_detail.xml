<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/DLGDetail_icon"
                android:layout_marginLeft="5dip"
                android:src="@drawable/image_unknown"
                android:contentDescription="@string/detail_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/DLGDetail_name"
                android:layout_marginLeft="20dip"
                android:hint="@string/edit_screen_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="@color/basic_text_grey"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="@string/detail_location"
                    android:textColor="@color/basic_text_grey"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="@string/detail_size"
                    android:textColor="@color/basic_text_grey"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="@string/detail_timestamp"
                    android:textColor="@color/basic_text_grey"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/DLGDetail_location"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:textColor="@color/basic_text_grey"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/DLGDetail_size"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:textColor="@color/basic_text_grey"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/DLGDetail_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:textColor="@color/basic_text_grey"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
